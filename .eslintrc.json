{
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "plugins": [
    "eslint-plugin-unused-imports"
  ],
  "rules": {
    "no-unused-vars": "off", 
    "no-useless-constructor": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
        "warn",
        {
            "vars": "all",
            "varsIgnorePattern": "^",
            "args": "after-used",
            "argsIgnorePattern": "^"
        }
    ]
}
}